<?xml version="1.0" encoding="UTF-8"?>

<redirect xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="redirect.xsd">

    <model match="^036_(.*)">
        <costumes>
            <pattern>tomori/${figure:^([^-]*)(?:-.*)?$}/model.json</pattern>
        </costumes>

        <motions>
            <pattern>tomori/${motion}</pattern>
            <pattern>tomori_${motion}</pattern>
        </motions>

        <expressions>
            <pattern>tomori/${expression}</pattern>
            <pattern>tomori_${expression}</pattern>
        </expressions>
    </model>

